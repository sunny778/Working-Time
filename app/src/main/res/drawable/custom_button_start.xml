<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid
                android:color="#FFFFFF"></solid>
            <stroke
                android:color="@color/colorPrimary"
                android:width="3dp"></stroke>
            <corners
                android:radius="4dp"></corners>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="40dp"
                android:bottom="40dp"></padding>

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid
                android:color="#FFFFFF"></solid>
            <stroke
                android:color="@color/colorPrimary"
                android:width="3dp"></stroke>
            <corners
                android:radius="4dp"></corners>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="40dp"
                android:bottom="40dp"></padding>

        </shape>
    </item>
</selector>